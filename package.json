{
  "name": "iconsole-plus-client",
  "productName": "iconsole-plus-client",
  "version": "1.0.0",
  "description": "iConsole+ Client",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "dev": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "lint": "tsc --noEmit"
  },
  "keywords": [],
  "author": {
    "name": "Boston",
    "email": "bostonleek@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@abandonware/noble": "^1.9.2-26",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.0.1",
    "lottie-web": "^5.13.0",
    "serialport": "^13.0.0",
    "solid-js": "^1.8.15"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-typescript": "^7.24.0",
    "@electron-forge/cli": "^7.6.0",
    "@electron-forge/maker-deb": "^7.6.0",
    "@electron-forge/maker-rpm": "^7.6.0",
    "@electron-forge/maker-squirrel": "^7.6.0",
    "@electron-forge/maker-zip": "^7.6.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.0",
    "@electron-forge/plugin-webpack": "^7.6.0",
    "@electron-forge/shared-types": "^7.6.0",
    "@types/node": "^20.11.24",
    "@vercel/webpack-asset-relocator-loader": "1.7.3",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^9.1.3",
    "babel-preset-solid": "^1.8.15",
    "css-loader": "^7.1.2",
    "electron": "^29.4.6",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "html-webpack-plugin": "^5.6.3",
    "node-loader": "^2.0.0",
    "postcss": "^8.5.4",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.6",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "iconsole_client"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-auto-unpack-natives",
          "config": {}
        },
        {
          "name": "@electron-forge/plugin-webpack",
          "config": {
            "mainConfig": "./webpack/webpack.main.config.js",
            "renderer": {
              "config": "./webpack/webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/renderer/index.html",
                  "js": "./src/renderer/renderer.tsx",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/preload.ts"
                  }
                }
              ]
            }
          }
        }
      ]
    }
  },
  "build": {
    "appId": "com.iconsole.client",
    "productName": "iConsole Client",
    "directories": {
      "output": "out"
    },
    "win": {
      "target": "nsis"
    }
  }
}
